<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Avengers"
                android:padding="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/txtGenre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Genre :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/movieGenre"
                app:layout_constraintStart_toEndOf="@id/txtGenre"
                app:layout_constraintTop_toBottomOf="@id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Action"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtRelease"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Release Year :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/releaseYear"
                app:layout_constraintStart_toEndOf="@id/txtRelease"
                app:layout_constraintTop_toBottomOf="@id/txtGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="2012"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Rating :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/movieRating"
                app:layout_constraintStart_toEndOf="@id/txtRating"
                app:layout_constraintTop_toBottomOf="@id/txtRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="8"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtDirector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Director :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/movieDirector"
                app:layout_constraintStart_toEndOf="@id/txtDirector"
                app:layout_constraintTop_toBottomOf="@id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Joss Whedon"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtLanguage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Language :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/movieLanguage"
                app:layout_constraintStart_toEndOf="@id/txtLanguage"
                app:layout_constraintTop_toBottomOf="@id/txtDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="English"
                android:textSize="18sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>